rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // カレンダーへのアクセス
    match /calendars/{calendarId} {
      // 読み書き可能
      allow read, write: if true;
      
      // recordsサブコレクション
      match /records/{recordId} {
        allow read, write: if true;
      }
      
      // preferencesサブコレクション
      match /preferences/{prefId} {
        allow read, write: if true;
      }
    }
  }
}